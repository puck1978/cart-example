{% extends 'base.html.twig' %}

{% block title %}Ãœbersicht der Produkte von CartExample{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {% for product in products %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src="{{ product.productMainImage.src }}" width="100%" height="auto"
                                 alt="{{ product.productMainImage.altText }}" />
                            <div class="card-body">

                                <div class="d-flex justify-content-between align-items-center">
                                    <a class="card-text" href="/products/{{ product.id }}">{{ product.name }}</a>
                                    <small class="text-body-secondary">ab {{ product.priceFormatted }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
