{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} bei CartExample kaufen{% endblock %}

{% block body %}

<div class="container">


    <div class="row">
        <div class="image-container col-sm-12 col-md-6">
            <img src="/{{ product.productMainImage.src }}" width="100%" height="100%"
                 alt="{{ product.productMainImage.altText }}" class="rounded-3" />
        </div>

        <div class="info-container col-sm-12 col-md-6">
            <h1>{{ product.name }}</h1>

            <p class="price">{{ product.priceFormatted }}</p>

            <button type="button" class="btn btn-primary col-12 btn-cart" data-pid="{{  product.id }}">
                <i class="bi bi-cart"></i>
                In den Warenkorb
            </button>
        </div>
    </div>


    <div class="pt-5">
        {{ product.description | raw }}
    </div>


</div>
{% endblock %}
